source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.3'

# Use postgresql as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :test, :development do

  # Minitest provides a complete suite of testing facilities supporting TDD, BDD, mocking, and benchmarking.
  # https://github.com/seattlerb/minitest
  gem 'minitest'

  # MailCatcher runs a super simple SMTP server which catches any message sent to it to display in a web interface.
  # https://github.com/sj26/mailcatcher
  gem 'mailcatcher'

  # Better error page for Rails and other Rack apps
  # https://github.com/charliesome/better_errors
  gem 'better_errors', '>= 0.7.2'

  # Mutes assets pipeline log messages.
  # https://github.com/evrone/quiet_assets
  gem 'quiet_assets', '>= 1.0.2'


  # Rspec-2 for Rails-3.X and Rails 4.X
  # https://github.com/rspec/rspec-rails
  gem 'rspec-rails', '~> 2.0'

  # Factory_girl is a fixtures replacement with a straightforward definition syntax
  # https://github.com/thoughtbot/factory_girl_rails
  gem 'factory_girl_rails', '~> 4.0'

  # Makes tests easy on the fingers and the eyes
  # https://github.com/thoughtbot/shoulda
  gem 'shoulda'

  # The instafailing RSpec progress bar formatter
  # https://github.com/jeffkreeftmeijer/fuubar
  gem 'fuubar'

end

# http://puma.io/
gem 'puma'


# Flexible authentication solution for Rails with Warden.
# https://github.com/plataformatec/devise
gem 'devise'

# Adds foreign key helpers to migrations and correctly dumps foreign keys to schema.rb
# https://github.com/matthuhiggins/foreigner
gem 'foreigner'

# Common interface for Ruby's HTTP libraries
# https://github.com/savonrb/httpi
gem 'httpi'

# A toolkit to convert your script to a controllable daemon.
# https://github.com/ghazel/daemons
gem 'daemons'

# ActiveRecord backend integration for DelayedJob 3.0
# https://github.com/collectiveidea/delayed_job_active_record
gem 'delayed_job_active_record'

# Resque like web interface for delayed job
# https://github.com/ejschmitt/delayed_job_web
gem 'delayed_job_web'

# FriendlyId is the “Swiss Army bulldozer” of slugging and permalink plugins for ActiveRecord.
# https://github.com/norman/friendly_id
gem 'friendly_id', '5.0.0.rc2'

# Use Capistrano for deployment
gem 'capistrano', group: :development

# Use debugger
gem 'debugger', group: [:development, :test]

# Pagination library for Rails 3, Sinatra, Merb, DataMapper, and more
# https://github.com/mislav/will_paginate
gem 'will_paginate', '~> 3.0'

# Object-based searching
# https://github.com/ernie/ransack
gem 'ransack'