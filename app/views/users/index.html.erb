<%= add_page_title(t('users'))%>


<%= render partial: 'filter' %>


  <% if @users.any?%>

    <div class="digg_pagination">
      <div clas="page_info">
        <%= page_entries_info @users %>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.user.name')%></th>
            <th><%= t('activerecord.attributes.user.email')%></th>
            <th class="center"><%= t('actions')%></th>
          </tr>
        </thead>
        <tbody>
      <% @users.each do |user|%>
        <tr>
          <td><%=user.full_name %></td>
          <td><%=user.email%></td>

          <td>
            <div class="action-buttons">

              <a href="<%= user_path(user)%>">
                <i class="icon-zoom-in icon-1"></i>
              </a>

              &nbsp;&nbsp;

              <a href="<%= edit_user_path(user)%>">
                <i class="icon-pencil icon-1"></i>
              </a>

              &nbsp;&nbsp;

              <a href="<%= user_path(user)%>" data-method="delete"
                 data-confirm="<%= t('messages.confirm_before_delete')%>">

                  <i class="icon-trash icon-1"></i>

              </a>

            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
      </table>
    </div>
    <div class="digg_pagination">
      <%= will_paginate @companies, :container => false %>
    </div>

  <% end %>

  <div class="center form-actions">
    <%= link_to t('new_user'), new_user_path, class: 'btn btn-danger' %>
    &nbsp; &nbsp; &nbsp;
    <%= back %>
  </div>
</div>