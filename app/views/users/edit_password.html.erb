<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <%= link_to t('home'), root_path %>
    </li>
    <li>
      <%= link_to t('users'), users_path %>
    </li>
    <li class="active"><%= t('update_password')%></li>
  </ul>
  <!-- .breadcrumb -->
</div>

<%= add_page_title(t('update_password') + " de " + @user.full_name)%>

<div class="page-content">

  <%= form_for(@user, url: update_password_user_path(@user),html: {class: 'form-horizontal', role: 'form'}) do |f| %>

    <%= error_messages!(@user) %>
    <%= add_password_field(f, @user, :password, true)%>
    <%= add_password_field(f, @user, :password_confirmation, true)%>
    <%= add_checkbox_field(f, @user, :send_password, t('activerecord.attributes.user.send_password'), true) %>
    <%= add_submit_and_back_button(f) %>
  <% end %>
</div>
