<h1 class="page-header"><%= t('password_recovery') %></h1>

<div>
  <%= bootstrap_flash %>

  <%= form_for(resource, :as => resource_name,
                         :url => password_path(resource_name),
                         :html => {:class => 'form-horizontal', :method => :post}) do |f| %>
    <%= error_messages!(resource) %>
    <%= add_text_field(f, resource, :email)%>
    <%= add_submit_button(f, t('send_me_reset_password_instructions'))%>
  <% end %>

</div>